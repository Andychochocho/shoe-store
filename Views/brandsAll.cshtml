<h1>Here are the list of all your Brands</h1>
@if (Model.Count == 0)
{
  <p>There are no added brands</p>
}
<ul>
  @foreach(var brand in @Model)
  {
    <li><a href="/brands/@brand.GetId()">@brand.GetName()</a></li>
  }
</ul>

<hr>
<h1>Add a new brand</h1>
<form action="/brands/new" method="post">
  <label>Name: </label>
  <input type="text" name="name">
  <button type="submit" name="button">Add!</button>
</form>

<hr>
<a href="/">Return home</a>
