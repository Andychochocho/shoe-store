<h1>Here are the list of Stores</h1>
@if (Model.Count == 0)
{
  <p> I'm sorry! There are no added stores.</p>
}
<ul>
  @foreach (var store in @Model)
  {
    <li>
      <a href="/stores/@store.GetId()">@store.GetName()</a>
    </li>
  }
</ul>

<hr>
<h1>Add a new Store</h1>
<form action="/stores/new" method="post">
  <label for="store-name">Name</label>
  <input type= id="store-name" "text" name="store-name">
  <button type="submit">Add!</button>
</form>

<a href="/">Return Home</a>
